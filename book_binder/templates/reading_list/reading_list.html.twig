{% extends 'base_website.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex flex-row overflow-auto gx-3">
        <div class="col-12 p-3 border my-3 rounded-3">          
            <div class="border-bottom mb-3 d-flex justify-content-left">
                <h5>Want to Read</h5>
            </div>
            <div class="d-flex flex-row overflow-auto">
                {% for book in want_to_read %}
                    <a href="{{ path('book-page', {'id': book.getGoogleBooksId() }) }}" class="text-decoration-none text-black p-2">
                        <div class="card" style="width: 10rem; height: 100%">
                            {% if book.getThumbnail() %}
                                <img src="{{ book.getThumbnail() }}" class="card-img-top" alt="{{ book.getTitle() }}" style="width: 100%; height: 16rem; object-fit: cover">
                            {% else %}
                                <img src="{{ asset('images/book_cover_empty.png') }}" class="card-img-top" alt="Empty Book Cover" style="width: 100%; height: 16rem; object-fit: cover">
                            {% endif %}

                            <div class="card-body d-none d-md-block">
                                <span class="card-title d-block text-truncate-2" style="max-height: 4rem; max-width: 100%">
                                    <b>{{ book.getTitle() }}</b>
                                </span>
                                <span class="card-text d-block text-truncate" style="max-height: 4rem; max-width: 100%">
                                    {{ book.getAuthor() }}
                                </span>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="d-flex flex-row overflow-auto gx-3">
        <div class="col-12 p-3 border my-3 rounded-3">
            <div class="border-bottom mb-3 d-flex justify-content-left">
                <h5>Currently Reading</h5>
            </div>
            <div class="d-flex flex-row overflow-auto">
                {% for book in currently_reading %}
                    <a href="{{ path('book-page', {'id': book.getGoogleBooksId() }) }}" class="text-decoration-none text-black p-2">
                        <div class="card" style="width: 10rem; height: 100%">
                            {% if book.getThumbnail() %}
                                <img src="{{ book.getThumbnail() }}" class="card-img-top" alt="{{ book.getTitle() }}" style="width: 100%; height: 16rem; object-fit: cover">
                            {% else %}
                                <img src="{{ asset('images/book_cover_empty.png') }}" class="card-img-top" alt="Empty Book Cover" style="width: 100%; height: 16rem; object-fit: cover">
                            {% endif %}

                            <div class="card-body d-none d-md-block">

                                <span class="card-title d-block text-truncate-2" style="max-height: 4rem; max-width: 100%">
                                    <b>{{ book.getTitle() }}</b>

                                </span>
                                <span class="card-text d-block text-truncate" style="max-height: 4rem; max-width: 100%">
                                    {{ book.getAuthor() }}
                                </span>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="d-flex flex-row overflow-auto gx-3">
        <div class="col-12 p-3 border my-3 rounded-3">
            <div class="border-bottom mb-3 d-flex justify-content-left">
                <h5>Have Read</h5>
            </div>
            <div class="d-flex flex-row overflow-auto">
                {% for book in have_read %}
                    <a href="{{ path('book-page', {'id': book.getGoogleBooksId() }) }}" class="text-decoration-none text-black p-2">
                        <div class="card" style="width: 10rem; height: 100%">
                            {% if book.getThumbnail() %}
                                <img src="{{ book.getThumbnail() }}" class="card-img-top" alt="{{ book.getTitle() }}" style="width: 100%; height: 16rem; object-fit: cover">
                            {% else %}
                                <img src="{{ asset('images/book_cover_empty.png') }}" class="card-img-top" alt="Empty Book Cover" style="width: 100%; height: 16rem; object-fit: cover">
                            {% endif %}

                            <div class="card-body d-none d-md-block">

                                <span class="card-title d-block text-truncate-2" style="max-height: 4rem; max-width: 100%">
                                    <b>{{ book.getTitle() }}</b>
                                </span>
                                <span class="card-text d-block text-truncate" style="max-height: 4rem; max-width: 100%">
                                    {{ book.getAuthor() }}
                                </span>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
