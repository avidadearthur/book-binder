{% extends 'base_login_registration.html.twig' %}

{% block title %}Register{% endblock %}

{% block javascripts %}
    <script src="https://accounts.google.com/gsi/client" async defer></script>
{% endblock %}

{% block body %}
<!-- Section: Design Block -->
<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-4 px-md-5 text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="d-flex flex-wrap flex-row justify-content-center gx-lg-3 align-items-top">
                <div class="col-lg-4 mb-5 mb-lg-0 mx-4">
                    <h1 class="mb-5 display-3 fw-bold ls-tight">
                    Welcome to <br />
                    <span class="text-primary">BookBinder</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                    Eveniet, itaque accusantium odio, soluta, corrupti aliquam
                    quibusdam tempora at cupiditate quis eum maiores libero
                    veritatis? Dicta facilis sint aliquid ipsum atque?
                    </p>
                </div>

                <div class="col-lg-5 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body px-5 pb-5 pt-4 px-md-5">
                            <h2 class="fw-bold mb-4 pb-2">Register</h2>
                            <form>
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div class="row mb-0">
                                    <div class="col-md-5 mb-3">
                                    <div class="form-outline">
                                        <label class="form-label" for="form3Example1">Name</label>
                                        <input type="text" id="form3Example1" placeholder="Optional" class="form-control" />
                                    </div>
                                    </div>
                                    <div class="col-md-7 mb-3">
                                    <div class="form-outline">
                                        <label class="form-label" for="form3Example2">Surname</label>
                                        <input type="text" id="form3Example2" placeholder="Optional" class="form-control" />
                                    </div>
                                    </div>
                                </div>

                                <!-- 2 column grid layout with text inputs for the nickname and email -->
                                <div class="row mb-0">
                                    <div class="col-md-4 mb-3">
                                    <div class="form-outline">
                                        <label class="form-label">Nickname</label>
                                        <input type="text" class="form-control" placeholder="Required">
                                    </div>
                                    </div>
                                    <div class="col-md-8 mb-3">
                                    <div class="form-outline">
                                        <label class="form-label" for="form3Example3">Email address</label>
                                        <input type="email" id="form3Example3" placeholder="Required" class="form-control" />
                                    </div>
                                    </div>
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example4">Password</label>
                                    <input type="password" id="form3Example4" placeholder="Required" class="form-control" />
                                </div>

                                <div class="">
                                    <!-- Submit button -->
                                    <button type="submit" class="btn btn-primary w-100 mb-4">
                                        Sign up
                                    </button>

                                    <!-- Sign Up with Google -->
                                    <div class="">
                                        <div id="g_id_onload"
                                            data-client_id="773315199188-t2bualn3k6id1gsokusqrueq55lkg4e4"
                                            data-context="signin"
                                            data-ux_mode="popup"
                                            data-login_uri="/login/google"
                                            data-auto_prompt="false">
                                        </div>

                                        <div class="g_id_signin"
                                            data-type="standard"
                                            data-shape="rectangular"
                                            data-theme="outline"
                                            data-text="signin_with"
                                            data-size="large"
                                            data-locale="en"
                                            data-logo_alignment="left">
                                        </div>
                                    </div>
                                </div>

                                <div class="a-row mt-4 text-center">
                                    Already have an account?
                                    <a class="a-link-emphasis" href="/login">
                                        Sign in
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
