{% extends 'base_website.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            {% for genre, books in results %}
                <h3>{{ genre }}</h3>
                <div class="d-flex flex-row overflow-auto">
                    {% for book in books %}
                        <a href="#" class="text-decoration-none p-2" style="color: black">
                            <div class="card" style="width: 8rem; height: 100%">
                                <img src="{{ book.getVolumeInfo().getImageLinks().getThumbnail() ?? asset('images/book_cover.png') }}" class="card-img-top" alt="{{ book.getVolumeInfo().getTitle() }}">
                                <div class="card-body d-none d-md-block">
                                    <p class="card-title">{{ book.getVolumeInfo().getTitle() }}</p>
                                    <p class="card-text">{{ book.getVolumeInfo().getAuthors()|join(', ') }}</p>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
        <div class="col-md-4 d-none d-md-block">
            <h3>Reviews</h3>
            <div class="card">
                <div class="card-header">
                    Book title
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>Review on the book</p>
                        <footer class="blockquote-footer">Username</footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
