{% extends 'base_website.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            {% for genre, books in results %}
                <h1>{{ genre }}</h1>
                <div class="d-flex flex-row overflow-auto">
                    {% for book in books %}
                        <a href="{{ path('bookPage', {'id': book.getId() }) }}" class="text-decoration-none p-2 text-black">
                            <div class="card" style="width: 12rem; height: 100%">
                                <img src="{{ book.getVolumeInfo().getImageLinks().getThumbnail() ?? asset('images/book_cover.png') }}" class="card-img-top" alt="{{ book.getVolumeInfo().getTitle() }}" style="width: 100%; height: 18rem; object-fit: cover">
                                <div class="card-body d-none d-md-block">
                                    <p class="card-title"><b>{{ book.getVolumeInfo().getTitle() }}</b></p>
                                    <p class="card-text">{{ book.getVolumeInfo().getAuthors()|join(', ') }}</p>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
        <div class="col-md-4 d-none d-md-block">
            <h1>Reviews</h1>
            <div class="card">
                <div class="card-header">
                    Book title
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>Review on the book</p>
                        <footer class="blockquote-footer">Username</footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
