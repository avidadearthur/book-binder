{% extends 'base_website.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            {% for genre, books in results %}
                <h3>{{ genre }}</h3>
                <div class="d-flex flex-row overflow-auto">
                    {% for book in books %}
                        <a href="{{ path('bookPage', {'id': book.getId() }) }}" class="text-decoration-none text-black p-2">
                            <div class="card" style="width: 10rem; height: 100%">
                                <img src="{{ book.getVolumeInfo().getImageLinks().getThumbnail() ?? asset('images/book_cover.png') }}" class="card-img-top" alt="{{ book.getVolumeInfo().getTitle() }}" style="width: 100%; height: 16rem; object-fit: cover">
                                <div class="card-body d-none d-md-block">
                                    <p class="card-title"><b>{{ book.getVolumeInfo().getTitle() }}</b></p>
                                    <p class="card-text">{{ book.getVolumeInfo().getAuthors()|join(', ') }}</p>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
        <div class="col-md-4 d-none d-md-block">
            <h3>Reviews</h3>
                <div class="d-flex flex-column">
                    {% for bookReview in reviews %}
                        <div class="card mb-3">
                            <div class="card-header">
                                <a href="{{ path('bookPage', {'id': bookReview.getBookID() }) }}" class="text-decoration-none text-black">{{ bookReview.getTitleOfBook() }}</a>
                            </div>
                            <div class="card-body">
                                <blockquote class="blockquote mb-0">
                                    <p>{{ bookReview.getReview() }}</p>
                                    <footer class="blockquote-footer">{{ bookReview.getUserID().getEmail() }}</footer>
                                </blockquote>
                            </div>
                            <div class="card-footer text-muted">
                                On {{ bookReview.getCreatedAt()|date('Y-m-d') }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
        </div>
    </div>
{% endblock %}
