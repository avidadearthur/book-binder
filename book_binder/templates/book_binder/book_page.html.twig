{% extends 'base_website.html.twig' %}

{% block body %}
    <div class="container-fluid d-flex flex-column flex-lg-row">
        <div style="width: available">
            <div class="row">
                <div class="col-auto">
                    <img src="{{ book.getThumbnail() ?? asset('images/book_cover_empty.png') }}" class="card-img-top" alt="{{ book.getTitle() }}">

                </div>
                <div class="col">
                    <h1>{{ book.getTitle() }}</h1>
                    <p>
                        {% set authors = book.getAuthor() %}
                        {% if authors|length == 1 %}
                            Author:
                        {% else %}
                            Authors:
                        {% endif %}
                        {{ authors|join(', ') }}
                    </p>
                    <p>Rating: {{ book.getRating() }}</p>
                    {% if book.getReviewCount() is defined %}
                        <p>Reviews: {{ book.getReviewCount() }}</p>
                    {% endif %}

                    <div class="dropdown pb-2">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            {% if is_in_want_to_read %}
                                To Read
                            {% elseif is_in_currently_reading %}
                                Currently Reading
                            {% elseif is_in_have_read %}
                                Have Read
                            {% else %}
                                Add to
                            {% endif %}
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><button type="button" class="dropdown-item" onclick="handleSelection('To Read', {{ book.getId() }})" {% if is_in_want_to_read %}disabled{% endif %}>To Read</button></li>
                            <li><button type="button" class="dropdown-item" onclick="handleSelection('Currently Reading', {{ book.getId() }})" {% if is_in_currently_reading %}disabled{% endif %}>Currently Reading</button></li>
                            <li><button type="button" class="dropdown-item" onclick="handleSelection('Have Read', {{ book.getId() }})" {% if is_in_have_read %}disabled{% endif %}>Have Read</button></li>
                        </ul>
                    </div>

                    <!-- Todo: Move this script to a separate file  -->
                    <script>
                        function handleSelection(selection, bookId) {
                            var dropdownButton = document.getElementById('dropdownMenuButton1');
                            dropdownButton.innerHTML = selection;

                            var xhr = new XMLHttpRequest();
                            xhr.open('POST', '{{ path('handle-dropdown-selection') }}', true);
                            xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
                            xhr.onreadystatechange = function() {
                                if (xhr.readyState === 4 && xhr.status === 200) {
                                    // Handle the response here if needed
                                    console.log(xhr.responseText);
                                }
                            };
                            xhr.send('selection=' + encodeURIComponent(selection) + '&book_id=' + encodeURIComponent(bookId));
                        }
                    </script>

                    <form method="POST" action="{{ path('app_meetup_requests', {'bookId': book.getId()}) }}">
                        <button type="submit" class="btn btn-primary btn-lg">Host Meetup</button>
                    </form>

                </div>
            </div>
            <div class="container pt-3">
                <p>
                    <button class="btn btn-primary" type="button" onclick="showContent('content1')">
                        Content
                    </button>
                    <button class="btn btn-primary" type="button" onclick="showContent('content2')">
                        Details
                    </button>
                </p>
                <div class="card card-body">
                    <p id="content1" style="display: block;">{{ book.getDescription() | raw }}</p>
                    <p id="content2" style="display: none;">{% set authors = book.getAuthor() %}
                        {% if authors|length == 1 %}
                            Author:
                        {% else %}
                            Authors:
                        {% endif %}
                        {{ authors|join(', ') }}
                        <br>
                        Date of publish: {{  book.getPublishedDate()|date('Y-m-d') }}
                        <br>
                        Pages: {{ book.getPages() }}
                    </p>
                </div>
            </div>
        </div>
        <div style="width: fit-content">
            <h3>Join Meetups:</h3>
            {% for meetupRequest in meetupRequests %}
                <div class="card mb-3" style="min-width: 300px">
                    <div class="d-flex flex-row h-100">
                        <img src="{{ book.getThumbnail() ?? asset('images/book_cover_empty.png') }}"
                             class="rounded-start" alt="{{ book.getTitle() }}" style="width: 140px; object-fit: cover">
                        <div class="card-body">
                            <h5 class="card-title">Host: {{ meetupRequest.getHostUser().getUserPersonalInfo().getName() }}</h5>
                            <p class="card-text">participants: {{ meetupRequest.getMaxNumber() }}</p>
                            <p class="card-text">library: {{ meetupRequest.getLibraryID().getLibraryName() }}</p>
                            <p class="card-text">Date: {{ meetupRequest.getDatetime()|date('F j') }}</p>
                            <a href="{{ path('meetup_requests_list_join_book', {'bookId': book.getID(),'meetupRequestId': meetupRequest.getMeetupId()}) }}" class="btn btn-primary">Join</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="modal fade" id="host" tabindex="-1" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title h4" id="exampleModalLgLabel">Host a meetup</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="library-name" class="form-label">Library</label>
                            <input type="text" class="form-control" id="library-name" name="library-name" required>
                        </div>
                        <div class="mb-3">
                            <label for="meetup-date" class="form-label">Meetup Date</label>
                            <input type="date" class="form-control" id="meetup-date" name="meetup-date" required>
                        </div>
                        <div class="mb-3">
                            <label for="max-participants" class="form-label">Maximum Participants</label>
                            <input type="number" class="form-control" id="max-participants" name="max-participants" required>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showContent(contentId) {
            var contentElements = document.querySelectorAll('.card.card-body p');
            contentElements.forEach(function(content) {
                if (content.id === contentId) {
                    content.style.display = 'block';
                } else {
                    content.style.display = 'none';
                }
            });
        }
    </script>

{% endblock %}