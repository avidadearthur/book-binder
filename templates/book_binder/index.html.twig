{% extends 'base_website.html.twig' %}

{% block body %}
    <div class="container-fluid row m-0">
        <div class="col-md-8">
        {% for genre, books in results %}
            <h4>{{ genre }}</h4>
            <div id="carouselExampleCaptions-{{ loop.index }}" class="carousel carousel-dark slide" data-bs-ride="false">
                <div class="carousel-inner">
                    {% set booksPerSlide = 3 %}
                    {% set totalBooks = books|length %}
                    {% set totalSlides = (totalBooks / booksPerSlide)|round(0, 'ceil') %}
                    {% set start = 0 %}
                    {% for slideIndex in 0..(totalSlides - 1) %}
                        <div class="carousel-item{% if slideIndex == 0 %} active{% endif %}">
                            <div class="card-group">
                                {% set end = start + booksPerSlide - 1 %}
                                {% for bookIndex in start..end %}
                                    {% if bookIndex < totalBooks %}
                                        {% set book = books[bookIndex] %}
                                        <div class="card">
                                            <a href="{{ path('book-page', {'id': book.getGoogleBooksId() }) }}" class="text-decoration-none text-black p-2">
                                                {% if book.getThumbnail() %}
                                                    <img src="{{ book.getThumbnail() }}" class="card-img-top w-100 height-16 fit-cover" alt="{{ book.getTitle() }}">
                                                {% else %}
                                                    <img src="{{ asset('images/book_cover_empty.png') }}" class="card-img-top w-100 height-16 fit-cover" alt="Empty Book Cover">
                                                {% endif %}
                                                <div class="card-body d-none d-md-block">
                                                    <h5 class="card-title text-truncate">{{ book.getTitle() }}</h5>
                                                    <p class="card-text text-truncate">{{ book.getAuthor() }}</p>
                                                </div>
                                            </a>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        {% set start = start + booksPerSlide %}
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions-{{ loop.index }}" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions-{{ loop.index }}" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        {% endfor %}
        </div>
        <div class="col-md-4 d-none d-md-block">
            <h4>Reviews</h4>
            <div class="d-flex flex-column gap-3">
                {% for bookReview in reviews %}
                    <div class="card">
                        <div class="card-header">
                            <a href="{{ path('book-page', {'id': bookReview.getBookID() }) }}" class="text-decoration-none text-black text-truncate-1">{{ bookReview.getBookTitle() }}</a>
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <div class="rating">
                                    {% for i in range(1, 5) %}
                                        {% if i <= bookReview.getRating() %}
                                            ★
                                        {% else %}
                                            ☆
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                <p class="text-truncate-3">{{ bookReview.getReview() }}</p>
                                <footer class="blockquote-footer">
                                    <a href="{{ path('profile_other', {'username': bookReview.getUserID().getUserPersonalInfo().getNickname() }) }}" class="link-secondary text-decoration-none">{{ bookReview.getUserID().getUserPersonalInfo().getNickname() }}</a>
                                </footer>
                            </blockquote>
                        </div>
                        <div class="card-footer text-muted">
                            On {{ bookReview.getCreatedAt()|date('Y-m-d') }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
