{% extends 'base_website.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex flex-row overflow-auto gx-3">
            <div class="col-12 p-3 border my-3 rounded-3">
                <div class="border-bottom mb-3 d-flex justify-content-left">
                    <h4>Want to Read</h4>
                </div>
                <div class="d-flex flex-row overflow-auto">
                    {% for book in want_to_read %}
                        <a href="{{ path('book-page', {'id': book.getGoogleBooksId() }) }}" class="text-decoration-none text-black p-2">
                            <div class="card h-100" style="width: 10rem">
                                {% if book.getThumbnail() %}
                                    <img src="{{ book.getThumbnail() }}" class="card-img-top w-100" alt="{{ book.getTitle() }}" style="height: 16rem; object-fit: cover">
                                {% else %}
                                    <img src="{{ asset('images/book_cover_empty.png') }}" class="card-img-top w-100" alt="Empty Book Cover" style="height: 16rem; object-fit: cover">
                                {% endif %}
                                <div class="card-body d-none d-md-block">
                                    <b class="card-title text-truncate-2">{{ book.getTitle() }}</b>
                                    <p class="card-text text-truncate">{{ book.getAuthor() }}</p>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="d-flex flex-row overflow-auto gx-3">
            <div class="col-12 p-3 border my-3 rounded-3">
                <div class="border-bottom mb-3 d-flex justify-content-left">
                    <h4>Currently Reading</h4>
