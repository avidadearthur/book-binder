{% extends 'base_website.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <div class="d-flex flex-row justify-content-start align-items-center gap-3">
                <img src="{{ asset('images/default_avatar.png') }}" alt="user" width="80" height="80" class="rounded-circle">
                <div class="d-flex flex-column">
                    <h1>{{ user.getUserPersonalInfo().getNickname() }}</h1>
                </div>
            </div>
            <hr>
            <h3>Preferences</h3>
            <p><b>Languages</b></p>
            {% for language in user.getUserReadingInterest().getLanguages() %}
                <p>{{ language }}   </p>
            {% endfor %}
            <p><b>Genres</b></p>
            {% for genre in user.getUserReadingInterest().getGenres() %}
                <p>{{ genre }}   </p>
            {% endfor %}
            <hr>
            <h3>My reading lists</h3>
            <div class="mb-3">
                <div class="mb-3 d-flex justify-content-left">
                    <h5>Want to Read ({{ want_to_read|length }})</h5>
                </div>
                <div class="d-flex flex-row overflow-auto">
                    {% for book in want_to_read %}
                        <a href="{{ path('book-page', {'id': book.getGoogleBooksId() }) }}" class="text-decoration-none text-black p-2">
                            <div class="card" style="width: 8rem; height: 100%">
                                {% if book.getThumbnail() %}
                                    <img src="{{ book.getThumbnail() }}" class="card-img-top" alt="{{ book.getTitle() }}" style="width: 100%; height: 14rem; object-fit: cover">
                                {% else %}
                                    <img src="{{ asset('images/book_cover_empty.png') }}" class="card-img-top" alt="Empty Book Cover" style="width: 100%; height: 14rem; object-fit: cover">
                                {% endif %}
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
            <div class="mb-3">
                <div class="mb-3 d-flex justify-content-left">
                    <h5>Currently Reading ({{ currently_reading|length }})</h5>
                </div>
                <div class="d-flex flex-row overflow-auto">
                    {% for book in currently_reading %}
                        <a href="{{ path('book-page', {'id': book.getGoogleBooksId() }) }}" class="text-decoration-none text-black p-2">
                            <div class="card" style="width: 8rem; height: 100%">
                                {% if book.getThumbnail() %}
                                    <img src="{{ book.getThumbnail() }}" class="card-img-top" alt="{{ book.getTitle() }}" style="width: 100%; height: 14rem; object-fit: cover">
                                {% else %}
                                    <img src="{{ asset('images/book_cover_empty.png') }}" class="card-img-top" alt="Empty Book Cover" style="width: 100%; height: 14rem; object-fit: cover">
                                {% endif %}
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
            <div class="mb-3">
                <div class="mb-3 d-flex justify-content-left">
                    <h5>Have Read ({{ have_read|length }})</h5>
                </div>
                <div class="d-flex flex-row overflow-auto">
                    {% for book in have_read %}
                        <a href="{{ path('book-page', {'id': book.getGoogleBooksId() }) }}" class="text-decoration-none text-black p-2">
                            <div class="card" style="width: 8rem; height: 100%">
                                {% if book.getThumbnail() %}
                                    <img src="{{ book.getThumbnail() }}" class="card-img-top" alt="{{ book.getTitle() }}" style="width: 100%; height: 14rem; object-fit: cover">
                                {% else %}
                                    <img src="{{ asset('images/book_cover_empty.png') }}" class="card-img-top" alt="Empty Book Cover" style="width: 100%; height: 14rem; object-fit: cover">
                                {% endif %}
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <hr class="d-md-none">
            <h3>My reviews</h3>
            {% for bookReview in reviews %}
                <div class="card mb-3">
                    <div class="card-header">
                        <a href="{{ path('book-page', {'id': bookReview.getBookID() }) }}" class="text-decoration-none text-black">{{ bookReview.getBookTitle() }}</a>
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>{{ bookReview.getReview() }}</p>
                        </blockquote>
                    </div>
                    <div class="card-footer text-muted">
                        On {{ bookReview.getCreatedAt()|date('Y-m-d') }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}